# # # API Server Settings # # #

# Port where to expose the server (default=5000)
API_PORT=5000

# Host where to bind the server (0.0.0.0 to bind all) (default=0.0.0.0)
API_HOST=0.0.0.0


# # # API Docs Settings # # #

# App Title, as shown in generated documentation (default="my-awesome-api")
API_DOCS_TITLE="my-awesome-api"

# App Description, as shown in generated documentation (default=nothing)
#API_DOCS_DESCRIPTION="FastAPI project"

# App Version, as shown in generated documentation (default="version")
#API_DOCS_VERSION="0.0.1"

# Custom logo URL to show in generated ReDoc documentation (default=nothing)
#API_DOCS_CUSTOM_LOGO=""

# If a static path is set, external dependencies used for OpenAPI/ReDoc documentation will be self-hosted instead of loaded from external CDN servers. (default=nothing)
#  The path must be a local accessible directory, absolute or relative. The files required for each documentation platform are:
#   - Swagger (OpenAPI): "swagger-ui.bundle.js", "swagger-ui.css", "favicon.ico"
#   - ReDoc: "redoc.standalone.js", "favicon.ico"
#  The files can be downloaded from: https://fastapi.tiangolo.com/advanced/extending-openapi/#download-the-files
#API_DOCS_STATIC_PATH="static"


# # # Request Logging Settings # # #

# Minimal log level for request logs. One of: TRACE, DEBUG, INFO, WARNING, ERROR (default=DEBUG)
REQUEST_LOG_LEVEL=TRACE

# If enabled, request logs will be output as JSON, useful for persistence (default=no)
REQUEST_LOG_SERIALIZE=no


# # # Security / Secrets # # #
# SECRET_KEY: must be set in production. In development you can set a random value.
# FERNET_KEY: optional key for encrypting sensitive DB fields.
# Generate URL-safe Fernet key:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

ENV=development
SECRET_KEY=dev-secret-change-me-in-production
FERNET_KEY=

# In production, SECRET_KEY must be explicitly set via environment.
# FERNET_KEY is optional; if set, enables field-level encryption for sensitive data.


# # # Database # # #
# DATABASE_URL format:
#   SQLite (dev):    sqlite:///./saas_v1.db
#   PostgreSQL:      postgresql+psycopg2://user:pass@localhost:5432/dbname
# If not set, defaults to SQLite in development.

DATABASE_URL=sqlite:///./saas_v1.db

# Access token expiration time (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60


# # # Cache & Rate Limiting (Redis) # # #
# REDIS_URL: optional URL for Redis-backed caching and rate-limiting
# If not set, caching and rate-limiting are disabled (fail-open).
# Format: redis://[:password]@host:port/db
#   Example: redis://redis:6379/0 (local development)
#   Example: redis://:mypass@redis.example.com:6379/0 (with password)

REDIS_URL=

# Rate limiter: requests per minute per (tenant_code, client_ip) pair
# Only applies if REDIS_URL is configured
RATE_LIMIT_REQUESTS_PER_MINUTE=60


# # # AI Configuration # # #
# AI_PROVIDER: cheap_api | hf_local | other
# cheap_api: Uses a cheap/free LLM API stub (requires AI_API_URL and AI_API_KEY)
# hf_local: Uses Hugging Face transformers locally (gpt2 for demo, slower)
AI_PROVIDER=cheap_api

# If using cheap_api provider, set these:
AI_API_URL=https://api.example.com/v1/generate
AI_API_KEY=

# Timeout for AI requests (seconds)
AI_TIMEOUT=8

# Max concurrent AI requests
AI_MAX_CONCURRENCY=4

# Cost tracking (if applicable)
COST_PER_1K_TOKENS=0.4


# # # Other Settings # # #
# CHUNK_SIZE: default chunk size for batch processing
CHUNK_SIZE=1000
